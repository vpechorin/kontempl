<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="kontempl-pu" transaction-type="RESOURCE_LOCAL">
		<description>Kontempl pu</description>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>net.pechorina.kontempl.data.User</class>
		<class>net.pechorina.kontempl.data.Credential</class>
		<class>net.pechorina.kontempl.data.Page</class>
		<class>net.pechorina.kontempl.data.PageElement</class>
		<class>net.pechorina.kontempl.data.Role</class>
		<class>net.pechorina.kontempl.data.PageElementType</class>
		<class>net.pechorina.kontempl.data.ImageFile</class>
		<class>net.pechorina.kontempl.data.Thumbnail</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.max_fetch_depth" value="4" />
			<property name="hibernate.jdbc.fetch_size" value="50" />
			<property name="hibernate.jdbc.batch_size" value="10" />
			<!--
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.hbm2ddl.import_files" value="/sql/import.sql"/>
			-->
			<!-- property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" / -->
		</properties>
	</persistence-unit>
</persistence>
